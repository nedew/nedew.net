---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="nedew's front page" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global lang="scss">
  :root {
    --color-primary: #fd7676;
    --color-primary-light: #f1d2d2;
    --color-primary-border: #e9e9e9;
    --color-bg: #fefafa;
    --color-text: #333232;
    --frame-width: 15px;
    --frame-padding: 2rem;
  }
  html {
  }
  body {
    font-family:
      system-ui,
      -apple-system,
      "Helvetica Neue",
      Arial,
      "Hiragino Kaku Gothic ProN",
      "Hiragino Sans",
      Meiryo,
      sans-serif;
    margin: 0;

    * {
      box-sizing: border-box;
    }
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
